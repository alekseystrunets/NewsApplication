<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.NewsApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="android:forceDarkAllowed">true</item>
    </style>

    <style name="Theme.NewsApplication" parent="Base.Theme.NewsApplication" />

    <style name="CardFormStyle">
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">24dp</item>
        <item name="android:background">@drawable/bg_card_form</item>
        <item name="android:elevation">8dp</item>
        <item name="android:outlineAmbientShadowColor">@color/shadow</item>
        <item name="android:outlineSpotShadowColor">@color/shadow</item>
    </style>

    <style name="LoginInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue_for_login_text</item>
        <item name="hintTextColor">@color/blue_for_login_text</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
</resources>